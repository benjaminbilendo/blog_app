<div class="welcome-image text-center">
    <img src="<%= asset_path( 'welcome_burned.png' ) %>" />
</div>

<div class="row">
    <% @blogs.each do |blog| %>
        <div class="col-sm-6">
            <h3><%= link_to blog.title, frontend_blog_url(blog) %></h3>
            <p><%= blog.text.truncate(50) %> <%= link_to "read more...", frontend_blog_url(blog) %></p>
            <%= image_tag(blog.image_url) %>
        </div>
    <% end %>
</div>

<%= will_paginate @blogs %>
