<%= form_for @subscription, :url => {:controller => "subscriptions", :action => "create"} do |form| %>

     <div class="form-group">
        <%= form.label :first_name %><br>
        <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :last_name %><br>
        <%= form.text_area :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= form.label :email %><br>
        <%= form.text_area :email, class: 'form-control' %>
    </div>

    <p>
        <%= form.submit class: 'btn btn-primary', data: { disable_with: 'Please wait...', confirm: 'Are you sure?' } %>
    </p>

<% end %>

