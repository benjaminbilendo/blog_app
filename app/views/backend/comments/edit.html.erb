<div class="row">
    <div class="col-md-12 text-center">
       <%= form_for [:backend, @blog, @comment] do |form| %>
            <div class="form-group text-center">
                <p>
                    <%= form.label :commenter %><br>
                    <%= form.text_field :commenter %>
                </p>
                <p>
                    <%= form.label :body %><br>
                    <%= form.text_area :body %>
                </p>
                <p>
                    <%= form.submit class: 'btn btn-primary', data: { disable_with: 'Please wait...', confirm: 'Are you sure?' } %>
                </p>
            </div>
        <% end %>
    </div>
</div>
